<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RadioGroup
                android:id="@+id/rg_prom"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="92dp"
                android:layout_marginStart="92dp"
                android:layout_marginTop="28dp"
                android:checkedButton="@+id/rb_prom2"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RadioButton
                    android:id="@+id/rb_prom2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Prom 2" />

                <RadioButton
                    android:id="@+id/rb_prom3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Prom 3" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rg_prom">

                <EditText
                    android:id="@+id/et_porce1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="%"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/et_porce2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="%"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/et_porce3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="%"
                    android:inputType="numberDecimal" />

                <Button
                    android:id="@+id/btn_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="236dp"
                    android:layout_marginRight="200dp"
                    android:layout_marginStart="36dp"
                    android:background="@drawable/borde_redondo"
                    android:text="Limpiar"
                    android:textColor="?attr/colorAccent" />

            </LinearLayout>

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="322dp"
                android:layout_height="232dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.785"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/et_01"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="@string/porcentaje1"
                        android:inputType="numberDecimal"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="16dp" />

                    <EditText
                        android:id="@+id/et_02"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="@string/porcentaje2"
                        android:inputType="numberDecimal"
                        tools:layout_editor_absoluteX="135dp"
                        tools:layout_editor_absoluteY="16dp" />

                    <EditText
                        android:id="@+id/et_03"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="@string/porcentaje3"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:id="@+id/tv_prom1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:gravity="center"
                        android:hint="@string/prom"
                        android:textSize="17sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/et_11"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="16dp" />

                    <EditText
                        android:id="@+id/et_12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        tools:layout_editor_absoluteX="135dp"
                        tools:layout_editor_absoluteY="16dp" />

                    <EditText
                        android:id="@+id/et_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:id="@+id/tv_prom2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:gravity="center"
                        android:hint="@string/prom"
                        android:textSize="17sp" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <EditText
                        android:id="@+id/et_21"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="16dp" />

                    <EditText
                        android:id="@+id/et_22"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        tools:layout_editor_absoluteX="135dp"
                        tools:layout_editor_absoluteY="16dp" />

                    <EditText
                        android:id="@+id/et_23"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:id="@+id/tv_prom3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:gravity="center"
                        android:hint="@string/prom"
                        android:textSize="17sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <EditText
                        android:id="@+id/et_31"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="16dp" />

                    <EditText
                        android:id="@+id/et_32"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        tools:layout_editor_absoluteX="135dp"
                        tools:layout_editor_absoluteY="16dp" />

                    <EditText
                        android:id="@+id/et_33"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:id="@+id/tv_prom4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:gravity="center"
                        android:hint="@string/prom"
                        android:textSize="17sp" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <EditText
                        android:id="@+id/et_41"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="16dp" />

                    <EditText
                        android:id="@+id/et_42"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        tools:layout_editor_absoluteX="135dp"
                        tools:layout_editor_absoluteY="16dp" />

                    <EditText
                        android:id="@+id/et_43"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:id="@+id/tv_prom5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:gravity="center"
                        android:hint="@string/prom"
                        android:textSize="17sp" />


                </TableRow>


            </TableLayout>

            <Button
                android:id="@+id/btn_promedia"
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="128dp"
                android:layout_marginRight="128dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/borde_redondo"
                android:text="PROMEDIA"
                android:textColor="?attr/colorBackgroundFloating" />

            <Button
                android:id="@+id/btn_limpiar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="128dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/borde_redondo"
                android:text="Limpiar"
                android:textColor="?attr/colorAccent"
                />

        </LinearLayout>
    </ScrollView>



</android.support.constraint.ConstraintLayout>